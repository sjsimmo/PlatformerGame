{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build platformer",
        "type": "shell",
        "command": "g++",
        "args": [ "-g",                                           //enable debug mode
                  "-o", "world_editor", "src/*.cpp", //output and source files
                  "-IC:/mingw-w64/SDL2-w64/include/SDL2", "-I${workspaceFolder}", //include directories
                  "-LC:/mingw-w64/SDL2-w64/lib",            //library directories
                  "-lmingw32", "-lSDL2main", "-lSDL2",            //linked libraries
                ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }